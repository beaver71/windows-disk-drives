{
  "name": "windows-disk-drives",
  "version": "1.0.0",
  "description": "List of available disk drives on Windows OS",
  "license": "MIT",
  "repository": "beaver71/windows-drive-letters",
  "author": {
    "name": "beaver71",
    "url": ""
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "os": [
    "win32"
  ],
  "scripts": {
    "test": "xo && mocha --timeout=5000"
  },
  "files": [
    "index.js"
  ],
  "keywords": [
    "windows",
    "disk",
    "drive"
  ],
  "dependencies": {
    "csvjson": "^5.0.0"
  },
  "devDependencies": {
    "mocha": "^3.2.0",
    "xo": "^0.17.1"
  },
  "xo": {
    "rules": {
      "indent": [
        "off",
        {
          "SwitchCase": 1
        }
      ],
      "arrow-parens": [
        2,
        "always"
      ],
      "object-curly-spacing": [
        2,
        "always"
      ],
	  "linebreak-style": ["off", "unix"],
      "babel/object-curly-spacing": 0,
      "space-before-function-paren": [
        2,
        "never"
      ],
      "generator-star-spacing": [
        2,
        "after"
      ]
    },
    "envs": [
      "node",
      "mocha"
    ]
  }
}
